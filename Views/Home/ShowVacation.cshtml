@model Vacation

<div class="rows">
    <div class="col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-img-top">
                <img src="@Model.ImgUrl" alt="Image of @Model.Destination" class="card-img-top">
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h2>@Model.Destination</h2>
                        <p>Planner: @Model.Planner.Name</p>
                    </div>
                    <div class="col">
                        <h2>Participants: </h2>
                        <ul>
                            @foreach(Association participant in Model.GroupMembers)
                            {
                            <li>@participant.Traveller.Name</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>